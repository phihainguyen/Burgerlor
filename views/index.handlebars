<h1>Burgerlor!</h1>

<div id="footer">
  <div id="addBurger">
    <h2 id="addTitle">Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca"></label>
        <input type="text" id="ca" name="name" placeholder="Burger's Name...">
      </div>
      <button id="submit" type="submit">Add Burger</button>
    </form>
  </div>
</div>

<div id="wrapper">
  <div class="col">
    <h2>What to Eat!</h2>
    <ul>
      {{#each burgers}}
      {{#unless ate}}
      {{> burgers/burger-block ate=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col">
    <h2>Devoured Burgers!</h2>
    <ul>
      {{#each burgers}}
      {{#if ate}}
      {{> burgers/burger-block ate=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>