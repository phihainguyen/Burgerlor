<h1>Burgerlor!</h1>

<h2>What to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless ate}}
      {{> burgers/burger-block ate=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if ate}}
      {{> burgers/burger-block ate=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Add Burger</button>
</form>